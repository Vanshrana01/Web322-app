<div class="row">
  <div class="col-md-12">
    <h2>Items</h2>
    <a href="/Items/add" class="btn btn-success pull-right">Add Post</a>
    <hr />
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Item ID</th>
            <th>Title</th>
            <th>Post Date</th>
            <th>Price</th>
            <th>Category</th>
            <th>Published</th>
          </tr>
        </thead>
        <tbody>
          {{#if items}}
            {{#each items}}
              <tr>
                <td>{{@index}}</td>
                <td>{{this.title}}</td>
                <td>{{this.postDate}}</td>
                <td>{{this.price}}</td>
                <td><a href="/items?category={{this.category}}">{{this.category}}</a></td>
                <td>{{this.published}}</td>
              </tr>
            {{/each}}
          {{else}}
            <tr>
              <td colspan="6" class="text-center"><strong>{{message}}</strong></td>
            </tr>
          {{/if}}
        </tbody>
      </table>
    </div>
  </div>
</div>





